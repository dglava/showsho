import argparse

import showsho

pars = argparse.ArgumentParser()
pars.add_argument(
    "FILE",
    help="JSON file containing the shows"
    )
pars.add_argument(
    "-d", "--download",
    action="store_true",
    help="Download new episodes"
    )
pars.add_argument(
    "-a", "--airing",
    action="store_true",
    help="Show only currently/soon to be airing shows"
    )
pars.add_argument("-p", "--delay",
    type=int,
    metavar="DAYS",
    help="Number of days to delay the airing dates"
    )
args = pars.parse_args()

try:
    showsho.main(args.FILE, args.download, args.delay, args.airing)
except KeyboardInterrupt:
    print()
